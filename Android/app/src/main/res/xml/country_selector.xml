<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- The title is the name of the country that is displayed for the user. (e.g Switzerland) -->
    <!-- The value is the country code as a string that will be saved in the SharedPreferences. (e.g "CH") -->
    <ListPreference
        android:key="select_country"
        android:title="@string/pref_title_select_country"
        android:entries="@array/pref_country_selection_titles"
        android:entryValues="@array/pref_country_selection_values"
        android:defaultValue="180"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />


</PreferenceScreen>
