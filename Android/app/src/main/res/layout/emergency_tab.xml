<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emergency_tab_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:id="@+id/fire"
                android:onClick="call"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp">

                <RelativeLayout

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40dp"
                        android:src="@drawable/phone_icon"
                        android:tint="@color/colorEmergencyCardsText"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:id="@+id/firenum"
                        android:textColor="@color/colorEmergencyCardsText"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:layout_marginLeft="0sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/fire_string"
                        android:textSize="35sp"
                        android:padding="10dp"
                        android:textColor="@color/colorEmergencyCardsText"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/police"

                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp">

                <RelativeLayout

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40dp"
                        android:src="@drawable/phone_icon"
                        android:tint="@color/colorEmergencyCardsText"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:id="@+id/policenum"
                        android:textColor="@color/colorEmergencyCardsText"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:layout_marginLeft="0sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/police_string"
                        android:textSize="35sp"
                        android:padding="10dp"
                        android:textColor="@color/colorEmergencyCardsText"
                        android:layout_marginLeft="0sp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/medical"

                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp">

                <RelativeLayout

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40dp"
                        android:src="@drawable/phone_icon"
                        android:tint="@color/colorEmergencyCardsText"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:id="@+id/medicalnum"
                        android:textColor="@color/colorEmergencyCardsText"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:layout_marginLeft="0sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/medical_string"
                        android:textSize="35sp"
                        android:padding="10dp"
                        android:textColor="@color/colorEmergencyCardsText"
                        android:layout_marginLeft="0sp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/plus_icon"
        android:layout_gravity="bottom|end" />

</android.support.design.widget.CoordinatorLayout>
